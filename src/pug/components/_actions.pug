// ORDER TO
.action(data-action="order-date")
  .action__wrapper
    .action__close(js-close)
      +icon('ico-close')
    
    .calendar-summary
      .calendar-summary__start(js-paste-start-date) start date
      | - 
      .calendar-summary__end(js-paste-end-date) end date
      .calendar-summary__days(js-calc-days)
        
    .calendar
      div(js-datepicker)
    
    .calendar-cta
      button(type='submit' js-apply-date).btn.btn--apply.btn--block Apply

// WHO
.action.action--simple(data-action="order-who")
  .action__bg
  .action__wrapper(js-closable-wrapper)
    .selector
      .selector__option(data-option="Couple" js-select-who) 
        span Couple
        +icon('ico-checkmark')
      
      .selector__option(data-option="Family" js-select-who)
        span Family
        +icon('ico-checkmark')
     
  

// GET ID
.order-name
  .order-name__wrapper
    .order-name__title Enter your Instagram nickname
    .order-name__subtitle that we can use to contact you and clarify details
    form(action="" js-validate-order-name).order-name__form
      input(type="text" placeholder="Your instagram nickname")
      button(type="submit").btn.btn--insta.btn--block finish Booking
      
// GET ID
.order-number
  .order-number__wrapper
    .order-number__title Your order number is
    .order-number__number(js-paste-booking-number) 2345
    .order-number__description Make sure to follow Relonch in Instagram. Copy your order number and send us a message in Instagram Direct.
    .order-number__cta
      button(js-copy-clipboard).btn.btn--cta Copy To Clipboard
